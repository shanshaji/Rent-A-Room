<h3>Rooms(<%= @rooms.length %>)</h3>

<% if @rooms.empty? %>
	<h4> No Rooms found </h4>

<% else%>
	<table border='1'>
	
	<% @rooms.each do |room| %>
	<% if room.is_authorized == true %>
		
		<tr>
			<td><%= link_to room.name,room_path(room.id) %></td>
			<td>INR <%= room.price%> </td>
			<td><%= image_tag room.images[1], size: "60x50"%> </td>
		</tr>
	<% end %>
	<% end %>
	</table>
<%end %><br/>

<% if (user_signed_in?) && (can? :create, Room.new) %>
	<%= link_to "Add room", new_room_path %>
<%end%>

<%= react_component 'Rooms', { data: @rooms } %>