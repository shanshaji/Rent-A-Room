<%= form_for(room) do |f| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price,  min:1 %>
  </div>
  <div class="field">
    <%= f.label :rules %>
    <%= f.text_area :rules %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.collection_select :city_id, City.all, :id, :name, prompt: "Select city" %>
  </div>
  <div>
    <%= f.label :images %>
    <%= f.file_field :images %>
    
  </div>
    <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
