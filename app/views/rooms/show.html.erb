<h2> Book the room </h2>
<% if user_signed_in? %>
	<%= form_for(Booking.new) do |f| %>
  		

	  <div class="field">
	    <%= f.label :start_date %>
	    <%= f.date_select :start_date %>
	  </div>

	  <div class="field">
	    <%= f.label :end_date %>
	    <%= f.date_select :end_date %>
	  </div>

	  <%= f.hidden_field :room_id, value: @room.id %>
	  <div class="actions">
	    <%= f.submit "BOOK" %>
	  </div>
		
	<%end%>
<% else %>
	<p> You need to sign in before booking a room</p>
<% end %>
