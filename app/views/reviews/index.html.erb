<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Review body</th>
      <th>Food rating</th>
      <th>Cleanliness rating</th>
      <th>Safety rating</th>
      <th>Facility rating</th>
      <th>Locality rating</th>
      <th>Room</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_body %></td>
        <td><%= review.food_rating %></td>
        <td><%= review.cleanliness_rating %></td>
        <td><%= review.safety_rating %></td>
        <td><%= review.facility_rating %></td>
        <td><%= review.locality_rating %></td>
        <td><%= review.room_id %></td>
        <td><%= review.user_id %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
